<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Sign Up for Character Keeper</h1>
<form action="/signup" method="post">
  <p>Username: <input type="text" name="user[username]"></p>
  <p>Email Address: <input type="text" name="user[email]"></p>
  <p>Password: <input type="password" name="user[password]"></p>
  <p>Confirm Password: <input type="password" name="confirm_password"></p>
  <input type="submit" name="submit" value="Create Account">
</form>

<p>Already have an account? <a href="/login"> Login</a> instead.</p>
