<h1><%=@character.name%></h1>
<br>
<p><b>Book/Series: </b><i><%=@character.book%></i></p>
<p><b>Description: </b><%=@character.description%></p>
<p><b>Traits:</b></b>
<%@character.traits.each do |trait|%>
  <p> - <%=trait.name%></p>
<%end%>
<% if current_user == @character.user %>
  <p><a href="/characters/<%=@character.slug%>/edit">Edit</a></p>
  <form action="/characters/<%=@character.slug%>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" name="submit" value="Delete Character">
  </form><br>
<%end%>
