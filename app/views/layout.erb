<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <title>Character Keeper</title>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="/stylesheets/css/bootstrap.css">
  <link rel="shortcut icon" type="image/png" href="/images/favicon.ico">
  <link href="https://fonts.googleapis.com/css?family=Bangers|Playfair+Display" rel="stylesheet">
</head>

<body>
  <div class="container">
    <!-- NAVBAR -->
    <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-light nav-link:hover">
    <a class="navbar-brand" href="/"><img src="/images/character-keeper.png" width="30" height="30" class="d-inline-block align-top" alt=""> Character Keeper</a>

    <div class="navbar" id="navbarSupportedContent">
      <%if logged_in?%>
      <% user = current_user %>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/users/<%=user.slug%>">Your Characters</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/characters">All Characters</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      <%end%>
    </div>
    </nav>

    <div class="jumbotron"> <!--enlarges fonts and puts in a gray box-->
      <% if flash.has?(:message) %>
        <%= flash[:message] %>
      <% end %>
      <%= yield %>
    </div>

    <div class="card-footer">
      <small>&copy; 2017 <strong>J-Nel Designs</strong></small>
    </div>

  </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="js/bootstrap.min.js"></script>
</body>
